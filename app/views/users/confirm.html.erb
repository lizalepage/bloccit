<h1>Sign Up Confirmation</h1>


<div class="row">
    
    <div class="col-md-8">
        <h2> Are you sure these values are correct?</h2>
        <p>Name: <%= @user.name %></p>
        <p>Email: <%= @user.email %></p>
    </div>
</div>     

<div class= "row">
    <div class="col-md-4", style="width: auto;">
        <%= button_to "Yes", { controller: "users", action: "create", params: { user: user_params } }, class: 'btn btn-success' %>
    </div>
    
    <div class="col-md-4", style="width: auto;">
        <%= button_to "No", new_user_path, method: :get, class: 'btn btn-danger' %>
    </div>    
</div>
   
    